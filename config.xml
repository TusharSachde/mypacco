<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.mypacco.mypacco" version="1.0.0" versionCode="1">

    <name>Mypacco</name>

    <description>Documents Delivery</description>

    <author href="http://www.wohlig.com" email="info@wohlig.com">Wohlig Technologies</author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ErrorUrl" value="" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <icon src="img/icon.png" />

    <gap:splash src="screen/screen-port-hdpi.png" gap:platform="android" density="port-hdpi" />
    <gap:splash src="screen/screen-port-ldpi.png" gap:platform="android" density="port-ldpi" />
    <gap:splash src="screen/screen-port-mdpi.png" gap:platform="android" density="port-mdpi" />
    <gap:splash src="screen/screen-port-xhdpi.png" gap:platform="android" density="port-xhdpi" />
    
    <gap:splash src="screen/splash-iphone.png" />

    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="320" height="568" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="screen/splash-iphone.png" gap:platform="ios" width="1242" height="2208" />

    <access origin="*" />

    <gap:plugin name="com.ionic.keyboard" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />


    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <feature name="Keyboard">
        <param name="ios-package" value="IonicKeyboard" onload="true" />
    </feature>
    <!-- for iOS -->
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <!-- for Android (you will find one in res/xml) -->
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>

</widget>